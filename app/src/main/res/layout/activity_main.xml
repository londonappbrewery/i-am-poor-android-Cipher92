<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="239dp"
        android:layout_height="264dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/coal" />

    <TextView
        android:id="@+id/Text_I"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/finger_paint"
        android:text="@string/title_i"
        android:textColor="#2980b9"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/Text_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text_I"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/finger_paint"
        android:text="@string/title_am"
        android:textColor="#2980b9"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/Text_poor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Text_am"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/finger_paint"
        android:text="@string/Title_poor"
        android:textColor="#3498db"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>
